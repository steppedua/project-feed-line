<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="createTables" author="your_name">
        <createTable tableName="user">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="status" type="char(32)"/>
            <column name="first_name" type="TEXT"/>
            <column name="last_name" type="TEXT"/>
            <column name="created_at" type="timestamp with time zone"/>
            <column name="updated_at" type="timestamp with time zone"/>
        </createTable>

        <createTable tableName="user_settings">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="notification_channel" type="TEXT"/>
            <column name="new_ui" type="BOOLEAN"/>
        </createTable>

        <createTable tableName="user_flags">
            <column name="id" type="UUID"/>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="key" type="TEXT"/>
            <column name="value" type="TEXT"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="user_settings"
                                 baseColumnNames="user_id"
                                 constraintName="fk_user_settings_user_id"
                                 referencedTableName="user"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="user_flags"
                                 baseColumnNames="user_id"
                                 constraintName="fk_user_flags_user_id"
                                 referencedTableName="user"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
